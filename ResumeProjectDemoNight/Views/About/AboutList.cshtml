@model List<ResumeProjectDemoNight.Entities.About>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Hakkımda";
}

<div class="max-w-6xl mx-auto p-6 space-y-6">

    <!-- Header -->
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-white">Hakkımda</h1>
            <p class="text-slate-400 text-sm">Profil bilgilerini yönet</p>
        </div>

        <a href="/About/CreateAbout"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary/20 border border-primary/30 text-primary text-sm font-semibold hover:brightness-110 transition">
            <span class="material-symbols-outlined">add</span>
            Yeni Hakkımda Ekle
        </a>
    </div>

    <!-- Table Card -->
    <div class="bg-slate-900/40 border border-slate-800 rounded-xl overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-800 flex items-center justify-between">
            <div class="flex items-center gap-2">
                <span class="material-symbols-outlined">badge</span>
                <h2 class="text-white font-semibold">Kayıtlar</h2>
            </div>

            <span class="text-xs text-slate-500">@Model.Count kayıt</span>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="bg-slate-900/60">
                    <tr class="text-left text-slate-300">
                        <th class="px-5 py-3 w-20">ID</th>
                        <th class="px-5 py-3">Ad Soyad</th>
                        <th class="px-5 py-3">Görsel URL</th>
                        <th class="px-5 py-3">Açıklama</th>
                        <th class="px-5 py-3 w-56 text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-800">
                    @foreach (var item in Model)
                    {
                        <tr class="text-slate-200 hover:bg-slate-900/30 transition">
                            <td class="px-5 py-3 text-slate-400">@item.AboutId</td>

                            <td class="px-5 py-3 font-semibold text-white">
                                @item.NameSurname
                            </td>

                            <td class="px-5 py-3 max-w-[280px]">
                                <div class="truncate text-slate-300">@item.ImageUrl</div>
                            </td>

                            <td class="px-5 py-3 max-w-[420px]">
                                <div class="truncate text-slate-300">@item.Description</div>
                            </td>

                            <td class="px-5 py-3">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="/About/UpdateAbout/@item.AboutId"
                                       class="inline-flex items-center gap-2 px-3 py-2 rounded-lg bg-amber-500/15 border border-amber-500/25 text-amber-300 hover:brightness-110 transition">
                                        <span class="material-symbols-outlined text-[18px]">edit</span>
                                        Güncelle
                                    </a>

                                    <a href="/About/DeleteAbout/@item.AboutId"
                                       class="inline-flex items-center gap-2 px-3 py-2 rounded-lg bg-red-500/15 border border-red-500/25 text-red-300 hover:brightness-110 transition"
                                       onclick="return confirm('Silmek istediğine emin misin?');">
                                        <span class="material-symbols-outlined text-[18px]">delete</span>
                                        Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
