@model ResumeProjectDemoNight.Entities.About

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Hakkımda Güncelle";
}

<div class="max-w-4xl mx-auto p-6 space-y-6">

    <!-- Header -->
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-white">Hakkımda Güncelle</h1>
            <p class="text-slate-400 text-sm">Mevcut kaydı düzenle</p>
        </div>

        <a href="/About/AboutList"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800/60 border border-slate-700 text-slate-200 text-sm font-semibold hover:bg-slate-800 transition">
            <span class="material-symbols-outlined">arrow_back</span>
            Listeye Dön
        </a>
    </div>

    <!-- Card -->
    <div class="bg-slate-900/40 border border-slate-800 rounded-xl overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-800 flex items-center gap-2">
            <span class="material-symbols-outlined">edit</span>
            <h2 class="text-white font-semibold">Form</h2>
        </div>

        <form method="post" class="p-6 space-y-5">
            <input type="hidden" asp-for="AboutId" />

            <!-- Ad Soyad -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Ad Soyad</label>
                <input asp-for="NameSurname"
                       class="w-full px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 focus:outline-none focus:ring-2 focus:ring-primary/50" />
            </div>

            <!-- Görsel URL -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Görsel URL</label>
                <input asp-for="ImageUrl"
                       class="w-full px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 focus:outline-none focus:ring-2 focus:ring-primary/50" />
                @if (!string.IsNullOrWhiteSpace(Model?.ImageUrl))
                {
                    <a href="@Model.ImageUrl" target="_blank"
                       class="text-xs text-slate-300 hover:text-white underline underline-offset-4">
                        Görseli yeni sekmede aç
                    </a>
                }
            </div>

            <!-- Açıklama -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Açıklama</label>
                <textarea asp-for="Description" rows="6"
                          class="w-full px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 focus:outline-none focus:ring-2 focus:ring-primary/50"></textarea>
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-end gap-2 pt-2">
                <a href="/About/AboutList"
                   class="px-4 py-2 rounded-lg text-sm font-semibold bg-slate-800/60 border border-slate-700 text-slate-200 hover:bg-slate-800 transition">
                    İptal
                </a>

                <button type="submit"
                        class="px-4 py-2 rounded-lg text-sm font-semibold bg-emerald-500/15 border border-emerald-500/25 text-emerald-300 hover:brightness-110 transition">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
