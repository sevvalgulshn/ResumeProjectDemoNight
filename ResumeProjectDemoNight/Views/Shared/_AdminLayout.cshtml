@{
    Layout = null;
}
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>

<html class="dark" lang="en">
<head>
    <!-- Layout dosyanızın head bölümüne ekleyin -->
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Developer Portfolio Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#197fe6",
                        "background-light": "#f6f7f8",
                        "background-dark": "#181818",
                        "sidebar-dark": "#121212",
                        "card-dark": "#222222",
                    },
                    fontFamily: {
                        "display": ["Inter"]
                    },
                    borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .sidebar-item-active {
            background-color: rgba(25, 127, 230, 0.1);
            border-right: 3px solid #197fe6;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 300, 'GRAD' 0, 'opsz' 24;
            color: #2dd4bf;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 flex min-h-screen overflow-hidden">

    <!-- Sidebar -->
    <aside class="w-64 bg-sidebar-dark border-r border-slate-800 flex flex-col fixed inset-y-0 left-0 z-50">
        <div class="p-6 flex items-center gap-3">
            <div class="size-8 bg-primary rounded-lg flex items-center justify-center">
                <span class="material-symbols-outlined text-white" style="color: white;">terminal</span>
            </div>
            <div>
                <h1 class="text-white text-lg font-bold leading-tight">Admin Panel</h1>
                <p class="text-slate-500 text-xs">Portfolio Manager</p>
            </div>
        </div>
        <div class="flex-1 flex flex-col justify-between">
            <nav class="flex-1 overflow-y-auto px-3 py-4 space-y-1 scrollbar-hide">
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "Dashboard" ? "sidebar-item-active text-white" : "")"
                   href="/Dashboard/Index/">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm font-medium">Dashboard</span>
                </a>

                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "About" ? "sidebar-item-active text-white" : "")" href="/About/Index/">
                    <span class="material-symbols-outlined">person</span>
                    <span class="text-sm font-medium">Hakkımda</span>
                </a>

                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "Experience" ? "sidebar-item-active text-white" : "")" href="/Experience/ExperienceList/">
                    <span class="material-symbols-outlined">work</span>
                    <span class="text-sm font-medium">Deneyimler</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "Education" ? "sidebar-item-active text-white" : "")" href="/Education/EducationList/">

                    <span class="material-symbols-outlined">school</span>
                    <span class="text-sm font-medium">Eğitimler</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "Skill" ? "sidebar-item-active text-white" : "")" href="/Skill/SkillList/">
                    <span class="material-symbols-outlined">code</span>
                    <span class="text-sm font-medium">Yetenekler</span>
                </a>

                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "Portfolio" ? "sidebar-item-active text-white" : "")" href="/Portfolio/PortfolioList/">
                    <span class="material-symbols-outlined">layers</span>
                    <span class="text-sm font-semibold">Projeler</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "Certificate" ? "sidebar-item-active text-white" : "")" href="/Certificate/CertificateList/">
                    <span class="material-symbols-outlined">verified</span>
                    <span class="text-sm font-medium">Sertifikalar</span>
                </a>

                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "Message" ? "sidebar-item-active text-white" : "")" href="/Message/MessageList/">
                    <span class="material-symbols-outlined">mail</span>
                    <span class="text-sm font-medium">Mesajlar</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors @(currentController == "SocialMedia" ? "sidebar-item-active text-white" : "")" href="/SocialMedia/SocialMediaList/">
                    <span class="material-symbols-outlined">share</span>
                    <span class="text-sm font-medium">Sosyal Medya</span>
                </a>
            </nav>
            <div class="p-4 border-t border-slate-800 space-y-1">
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="#">
                    <span class="material-symbols-outlined">settings</span>
                    <span class="text-sm font-medium">Ayarlar</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-red-400 hover:text-red-300 hover:bg-red-900/20 transition-colors" href="#">
                    <span class="material-symbols-outlined" style="color: inherit;">logout</span>
                    <span class="text-sm font-medium">Çıkış Yap</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="ml-64 flex-1 flex flex-col h-screen overflow-hidden">

        <!-- TOP BAR -->
        <header class="h-16 border-b border-slate-800 bg-background-dark/80 backdrop-blur-md flex items-center justify-between px-8 sticky top-0 z-40">
            <div class="flex items-center gap-3">
                <h2 class="text-white text-lg font-bold leading-tight tracking-tight">
                    @ViewData["Title"]
                </h2>

                <span class="text-slate-400 text-sm">
                    Hoş geldin,
                    <span class="text-white font-semibold">
                        @(ViewBag.AdminName ?? "Şevval")
                    </span> 👋
                </span>
            </div>



            <div class="flex items-center gap-4">

                <!-- Projects badge -->
                <a href="/Portfolio/PortfolioList" class="relative p-2 text-slate-400 hover:text-white transition-colors">
                    <span class="material-symbols-outlined">layers</span>
                    @if ((int)(ViewBag.TopTotalProjects ?? 0) > 0)
                    {
                        <span class="absolute -top-1 -right-1 text-[10px] font-bold px-1.5 py-0.5 rounded-full bg-primary text-white">
                            @ViewBag.TopTotalProjects
                        </span>
                    }
                </a>

                <!-- Unread messages badge -->
                <a href="/Message/MessageList" class="relative p-2 text-slate-400 hover:text-white transition-colors">
                    <span class="material-symbols-outlined">mail</span>
                    @if ((int)(ViewBag.TopUnreadMessages ?? 0) > 0)
                    {
                        <span class="absolute -top-1 -right-1 text-[10px] font-bold px-1.5 py-0.5 rounded-full bg-red-500 text-white">
                            @ViewBag.TopUnreadMessages
                        </span>
                    }
                </a>

                <div class="h-8 w-[1px] bg-slate-800 mx-2"></div>

                <div class="flex items-center gap-3">
                    <div class="text-right">
                        <p class="text-white text-sm font-bold">@(ViewBag.AdminName ?? "Şevval")</p>


                        <p class="text-slate-500 text-xs">Portfolio Manager</p>
                    </div>
                </div>

            </div>
        </header>

        <!-- PAGE BODY -->
        <div class="flex-1 overflow-y-auto">
            @RenderBody()
        </div>

    </main>

</body>
</html>
<style>
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }

    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>