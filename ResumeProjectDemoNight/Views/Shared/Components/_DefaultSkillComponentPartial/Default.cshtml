@model List<ResumeProjectDemoNight.Entities.Skill>

<section id="skills" class="pt-12">
    <h3 class="text-2xl font-bold mb-6">Yetenekler</h3>

    <div class="space-y-4">
        @foreach (var item in Model)
        {
            <div>
                <div class="flex justify-between text-sm mb-1">
                    <span class="font-medium">@item.Title</span>
                    <span class="text-slate-400">@item.Value%</span>
                </div>

                <div class="w-full bg-slate-200 dark:bg-slate-800 rounded-full h-2">
                    <div class="bg-primary h-2 rounded-full" style="width:@item.Value%"></div>
                </div>
            </div>
        }
    </div>
</section>
