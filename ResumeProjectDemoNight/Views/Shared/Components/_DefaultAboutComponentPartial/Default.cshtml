@model ResumeProjectDemoNight.Entities.About

<section id="about">
    <div class="container">

        <h2 class="section-title wow fadeInUp">Hakkımda</h2>
        <div class="spacer" data-height="60"></div>

        <div class="row">

            <!-- SOL: Foto -->
            <div class="col-md-3">
                <div class="text-center text-md-left">
                    <!-- Foto dosyan: wwwroot/images/sevval-foto.jpg -->
                    <img src="~/images/sevval-foto.jpg"
                         alt="@Model?.NameSurname"
                         style="width:170px;height:170px;object-fit:cover;border-radius:50%;border:6px solid #fff;box-shadow:0 10px 30px rgba(0,0,0,.08);" />
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <!-- SAĞ: Kart -->
            <div class="col-md-9 triangle-left-md triangle-top-sm">
                <div class="rounded bg-white shadow-dark padding-30">
                    <div class="row">

                        <!-- Sol metin -->
                        <div class="col-md-6">
                            <p style="line-height:1.8;">
                                @if (!string.IsNullOrWhiteSpace(Model?.Description))
                                {
                                    @Model.Description
                                }
                                else
                                {
                                    <text>
                                        Merhaba, ben Şevval Gül Şahin. C#/.NET ve Python ile web & backend geliştirme ve
                                        veri odaklı analiz üzerine çalışıyorum. ASP.NET Core (MVC & Web API) projelerinde
                                        API geliştirme, test senaryosu yazımı, manuel test ve Postman ile API testleri
                                        konularında deneyim sahibiyim.
                                    </text>
                                }
                            </p>

                            <div class="mt-3 d-flex" style="gap:10px;flex-wrap:wrap;">
                                <!-- CV: wwwroot/files/Sevvalsahin.tr.pdf -->
                                <a href="~/files/Sevvalsahin.tr.pdf" download class="btn btn-default">
                                    CV İndir
                                </a>

                            </div>

                            <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                        </div>

                        <!-- Sağ skill barlar -->
                        <div class="col-md-6">
                            @{
                                var skillList = ViewBag.SkillList as List<ResumeProjectDemoNight.Entities.Skill>;
                                string[] colors = { "#6366F1", "#22C55E", "#F59E0B", "#EF4444" };
                                int colorIndex = 0;
                            }

                            <h4 class="mt-0 mb-4" style="font-weight:700;">Yetenekler</h4>

                            @if (skillList != null && skillList.Any())
                            {
                                foreach (var item in skillList)
                                {
                                    var currentColor = colors[colorIndex % colors.Length];
                                    colorIndex++;

                                    <div class="skill-item">
                                        <div class="skill-info clearfix">
                                            <h4 class="float-left mb-2 mt-0">@item.Title</h4>
                                            <span class="float-right">@item.Value%</span>
                                        </div>

                                        <div class="progress" style="height:8px;border-radius:999px;">
                                            <div class="progress-bar data-background"
                                                 role="progressbar"
                                                 aria-valuemin="0" aria-valuemax="100"
                                                 aria-valuenow="@item.Value"
                                                 data-color="@currentColor"
                                                 style="width:@item.Value%; background-color:@currentColor; border-radius:999px;">
                                            </div>
                                        </div>

                                        <div class="spacer" data-height="18"></div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-muted">Henüz yetenek eklenmemiş.</div>
                            }
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div class="spacer" data-height="70"></div>


        

    </div>
</section>
