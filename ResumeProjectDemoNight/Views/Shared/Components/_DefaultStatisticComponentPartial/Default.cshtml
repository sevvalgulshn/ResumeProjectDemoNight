@model List<ResumeProjectDemoNight.Entities.Statistic>

<section id="statistics">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="service-box rounded shadow-dark text-center">
                        <i class="@item.Icon" style="font-size:32px;"></i>
                        <h3 class="mt-3">@item.Value</h3>
                        <p class="mb-0">@item.Title</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
