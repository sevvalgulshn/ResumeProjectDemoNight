@model List<ResumeProjectDemoNight.Entities.SocialMedia>

<section id="social-media" class="pt-12">
    <h3 class="text-2xl font-bold mb-6">Sosyal Medya</h3>

    <div class="flex gap-4 items-center">
        @foreach (var item in Model)
        {
            <a href="@item.Url" target="_blank" class="flex items-center gap-2 text-lg">
                <i class="@item.Icon"></i>
                <span class="text-sm">@item.Title</span>
            </a>
        }
    </div>
</section>
