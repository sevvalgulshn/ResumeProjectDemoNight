@model List<ResumeProjectDemoNight.Entities.Service>

<section id="services">

    <div class="container">

        <!-- section title -->
        <h2 class="section-title wow fadeInUp">Hizmetlerim</h2>

        <div class="spacer" data-height="40"></div>

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">

                    <!-- service box -->
                    <div class="service-box rounded data-background text-center text-light shadow-blue"
                         data-color="#6C6CE5"
                         style="padding:18px; border-radius:18px;">

                        <img src="@item.ImageUrl"
                             alt="service"
                             style="width:85px; height:auto; margin-bottom:12px;" />

                        <h3 class="mt-0"
                            style="font-size:17px; margin-bottom:8px;">
                            @item.Title
                        </h3>

                        <p class="mb-0"
                           style="font-size:14px; line-height:1.45;">
                            @item.Description
                        </p>
                    </div>

                    <div class="spacer d-md-none d-lg-none" data-height="25"></div>
                </div>
            }

        </div>

        <div class="mt-4 text-center">
            <p class="mb-0">
                Bir projeniz mi var?
                <a href="#contact"
                   onclick="document.getElementById('contact').scrollIntoView({behavior:'smooth'}); return false;"
                   style="font-weight:600;">
                    Buradan
                </a>

            </p>
        </div>

    </div>

</section>
