@model ResumeProjectDemoNight.Entities.Message

<section id="contact" style="scroll-margin-top: 40px;">
    <div class="container">

        <h2 class="section-title wow fadeInUp">Bana Yazın!</h2>
        <div class="spacer" data-height="60"></div>

        <div class="row">
            <div class="col-md-4">
                <div class="contact-info">
                    <h3 class="wow fadeInUp">Her konuda benimle iletişime geçebilirsiniz!</h3>
                    <p class="wow fadeInUp">
                        Bir fikriniz, sorunuz ya da iş birliği teklifiniz mi var?
                        Formu doldurarak bana kolayca ulaşabilirsiniz.
                        <a href="mailto:sevvalgulsahin44@gmail.com">email</a>. 👋
                    </p>
                </div>
            </div>

            <div class="col-md-8">
                <form id="contact-form-mvc" class="contact-form mt-6" method="post"
                      asp-controller="Default" asp-action="SendMessage">


                    @Html.AntiForgeryToken()

                    <!-- TempData mesajları (başarılı / hata) -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success mt-2">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger mt-2">@TempData["Error"]</div>
                    }

                    <!-- Temanın kullandığı alan: bırakmak iyi -->
                    <div class="messages"></div>

                    <div class="row">
                        <div class="column col-md-6">
                            <div class="form-group">
                                <input asp-for="NameSurname"
                                       class="form-control"
                                       placeholder="Ad-Soyad"
                                       required />
                                <span asp-validation-for="NameSurname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="column col-md-6">
                            <div class="form-group">
                                <input asp-for="Email"
                                       type="email"
                                       class="form-control"
                                       placeholder="E-posta adresi"
                                       required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="column col-md-12">
                            <div class="form-group">
                                <input asp-for="Subject"
                                       class="form-control"
                                       placeholder="Konu"
                                       required />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="column col-md-12">
                            <div class="form-group">
                                <textarea asp-for="MessageDetail"
                                          class="form-control"
                                          rows="5"
                                          placeholder="Mesajınızı buraya yazabilirsiniz"
                                          required></textarea>
                                <span asp-validation-for="MessageDetail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default">Mesaj Gönder</button>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="spacer" data-height="96"></div>
