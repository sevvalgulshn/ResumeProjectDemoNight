@model ResumeProjectDemoNight.Entities.Education

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Eğitim Güncelle";
}

<div class="max-w-4xl mx-auto p-6 space-y-6">

    <!-- Header -->
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-white">Eğitim Güncelle</h1>
            <p class="text-slate-400 text-sm">Eğitim bilgisini düzenle</p>
        </div>

        <a href="/Education/EducationList"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800/60 border border-slate-700 text-slate-200 text-sm font-semibold hover:bg-slate-800 transition">
            <span class="material-symbols-outlined">arrow_back</span>
            Listeye Dön
        </a>
    </div>

    <!-- Card -->
    <div class="bg-slate-900/40 border border-slate-800 rounded-xl overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-800 flex items-center gap-2">
            <span class="material-symbols-outlined">edit</span>
            <h2 class="text-white font-semibold">Form</h2>
        </div>

        <form method="post" class="p-6 space-y-5">
            <input type="hidden" asp-for="EducationId" />

            <!-- Okul -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Okul Adı</label>
                <input asp-for="SchoolName"
                       class="w-full px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 focus:outline-none focus:ring-2 focus:ring-primary/50" />
            </div>

            <!-- Bölüm -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Bölüm</label>
                <input asp-for="Department"
                       class="w-full px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 focus:outline-none focus:ring-2 focus:ring-primary/50" />
            </div>

            <!-- Tarih -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Tarih</label>
                <input asp-for="Date"
                       class="w-full px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 focus:outline-none focus:ring-2 focus:ring-primary/50" />
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-end gap-2 pt-2">
                <a href="/Education/EducationList"
                   class="px-4 py-2 rounded-lg text-sm font-semibold bg-slate-800/60 border border-slate-700 text-slate-200 hover:bg-slate-800 transition">
                    İptal
                </a>

                <button type="submit"
                        class="px-4 py-2 rounded-lg text-sm font-semibold bg-emerald-500/15 border border-emerald-500/25 text-emerald-300 hover:brightness-110 transition">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
