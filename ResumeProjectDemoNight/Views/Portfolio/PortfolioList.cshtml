@model List<ResumeProjectDemoNight.Entities.Portfolio>

@{
    ViewData["Title"] = "Projeler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-8">
    <div class="max-w-7xl mx-auto space-y-6">

        <!-- Header -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
            <div>
                <h1 class="text-2xl font-bold text-white">Projeler</h1>
                <p class="text-slate-400 text-sm">Portfolyo projelerini buradan yönetebilirsin</p>
            </div>

            <a href="/Portfolio/CreatePortfolio/"
               class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary text-white font-semibold hover:opacity-90 transition">
                <span class="material-symbols-outlined" style="font-size:18px;color:white;">add</span>
                Yeni Proje Ekle
            </a>
        </div>

        <!-- Card -->
        <div class="bg-card-dark border border-slate-800 rounded-xl overflow-hidden shadow-xl">

            <div class="p-5 border-b border-slate-800 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined text-primary" style="font-size:22px;">layers</span>
                    <p class="text-white font-semibold">Portfolio Listesi</p>
                </div>

                <span class="text-xs text-slate-400">
                    Toplam: <span class="text-white font-semibold">@Model?.Count()</span>
                </span>
            </div>

            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="min-w-full text-sm">
                    <thead class="bg-slate-900/40">
                        <tr class="text-left text-slate-300">
                            <th class="px-5 py-3 w-20">#</th>
                            <th class="px-5 py-3">Başlık</th>
                            <th class="px-5 py-3 w-32">Durum</th>
                            <th class="px-5 py-3 w-52 text-right">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-800">
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="px-5 py-10 text-center text-slate-400">
                                    Henüz proje eklenmemiş.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr class="hover:bg-slate-900/30 transition">
                                    <td class="px-5 py-4 text-slate-300">@item.PortfolioId</td>

                                    <td class="px-5 py-4">
                                        <div class="flex flex-col">
                                            <span class="text-white font-semibold">
                                                @item.ProjectTitle
                                            </span>
                                            @* İstersen alt satıra küçük bir info koyabiliriz (Category, date vs.) *@
                                        </div>
                                    </td>

                                    <td class="px-5 py-4">
                                        @if (item.Status)
                                        {
                                            <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold
                                                                     bg-emerald-500/15 text-emerald-300 border border-emerald-500/20">
                                                <span class="size-1.5 rounded-full bg-emerald-400"></span>
                                                Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-bold
                                                                     bg-slate-500/15 text-slate-300 border border-slate-500/20">
                                                <span class="size-1.5 rounded-full bg-slate-300"></span>
                                                Pasif
                                            </span>
                                        }
                                    </td>

                                    <td class="px-5 py-4">
                                        <div class="flex items-center justify-end gap-2">

                                            <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId"
                                               class="inline-flex items-center gap-2 px-3 py-2 rounded-lg
                                                              bg-slate-900/50 border border-slate-700
                                                              text-slate-200 hover:text-white hover:border-primary/50 hover:bg-slate-800 transition">
                                                <span class="material-symbols-outlined" style="font-size:18px;">edit</span>
                                                Güncelle
                                            </a>

                                            <a href="/Portfolio/DeletePortfolio/@item.PortfolioId"
                                               onclick="return confirm('Silmek istediğine emin misin?');"
                                               class="inline-flex items-center gap-2 px-3 py-2 rounded-lg
                                                              bg-red-500/10 border border-red-500/30
                                                              text-red-300 hover:text-red-200 hover:bg-red-500/20 transition">
                                                <span class="material-symbols-outlined" style="font-size:18px;color:inherit;">delete</span>
                                                Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
