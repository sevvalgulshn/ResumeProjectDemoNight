@model ResumeProjectDemoNight.Entities.Portfolio

@{
    ViewData["Title"] = "Proje Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-5xl mx-auto p-6 space-y-6">

    <!-- Header -->
    <div class="flex items-start justify-between">
        <div>
            <h1 class="text-xl font-bold text-white">Proje Güncelle</h1>
            <p class="text-slate-400 text-sm">Seçilen projenin bilgilerini düzenle</p>
        </div>

        <a href="/Portfolio/PortfolioList/"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-slate-800 bg-slate-900/30 text-slate-200 text-sm font-semibold hover:bg-slate-900/60 transition">
            <span class="material-symbols-outlined">arrow_back</span>
            Listeye Dön
        </a>
    </div>

    <!-- Card -->
    <div class="bg-slate-900/40 border border-slate-800 rounded-xl overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-800">
            <h2 class="text-white font-semibold">Proje Bilgileri</h2>
        </div>

        <form method="post" class="p-5 space-y-5">
            <input type="hidden" asp-for="PortfolioId" />

            <!-- Title -->
            <div>
                <label class="block text-sm font-semibold text-slate-200 mb-2">Başlık</label>
                <input asp-for="ProjectTitle"
                       class="w-full px-4 py-2.5 rounded-lg bg-slate-900/60 border border-slate-800 text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary"
                       placeholder="Proje başlığı" />
            </div>

            <!-- ImageUrl -->
            <div>
                <label class="block text-sm font-semibold text-slate-200 mb-2">Görsel URL</label>
                <input asp-for="ImageUrl"
                       class="w-full px-4 py-2.5 rounded-lg bg-slate-900/60 border border-slate-800 text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary"
                       placeholder="Görsel yolu / url" />
            </div>

            <!-- Status -->
            <div class="flex items-center gap-3 pt-1">
                <input asp-for="Status"
                       class="h-4 w-4 rounded border-slate-700 bg-slate-900/60 text-primary focus:ring-primary/40" />
                <label class="text-sm text-slate-200">Aktif</label>
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-end gap-3 pt-2">
                <a href="/Portfolio/PortfolioList/"
                   class="px-4 py-2.5 rounded-lg border border-slate-800 bg-slate-900/30 text-slate-200 text-sm font-semibold hover:bg-slate-900/60 transition">
                    İptal
                </a>

                <button type="submit"
                        class="px-4 py-2.5 rounded-lg bg-primary text-white text-sm font-semibold hover:opacity-90 transition">
                    Projeyi Güncelle
                </button>
            </div>
        </form>
    </div>

</div>
