@model List<ResumeProjectDemoNight.Entities.SocialMedia>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sosyal Medya";
}

<div class="max-w-7xl mx-auto p-6 space-y-6">

    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-white">Sosyal Medya</h1>
            <p class="text-slate-400 text-sm">Hesaplarını yönet</p>
        </div>

        <a href="/SocialMedia/CreateSocialMedia"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary text-white text-sm font-semibold hover:brightness-110 transition">
            <span class="material-symbols-outlined" style="color:white;">add</span>
            Yeni Hesap Ekle
        </a>
    </div>

    <!-- Table Card -->
    <div class="bg-slate-900/40 border border-slate-800 rounded-xl overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-800 flex items-center justify-between">
            <div class="flex items-center gap-2">
                <span class="material-symbols-outlined">share</span>
                <h2 class="text-white font-semibold">Hesap Listesi</h2>
            </div>

            <div class="text-slate-400 text-xs">
                Toplam: <span class="text-white font-semibold">@Model.Count</span>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="bg-slate-900/60">
                    <tr class="text-slate-300">
                        <th class="px-5 py-3 text-left font-semibold w-20">ID</th>
                        <th class="px-5 py-3 text-left font-semibold">Başlık</th>
                        <th class="px-5 py-3 text-left font-semibold">URL</th>
                        <th class="px-5 py-3 text-left font-semibold w-56">Icon</th>
                        <th class="px-5 py-3 text-left font-semibold w-28">Durum</th>
                        <th class="px-5 py-3 text-right font-semibold w-44">İşlemler</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-slate-800">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-900/40 transition">
                            <td class="px-5 py-3 text-slate-300">@item.SocialMediaId</td>

                            <td class="px-5 py-3">
                                <div class="font-semibold text-white">@item.Title</div>
                                <div class="text-xs text-slate-500">Hesap</div>
                            </td>

                            <td class="px-5 py-3">
                                <a href="@item.Url" target="_blank"
                                   class="text-slate-300 hover:text-white underline underline-offset-4"
                                   title="@item.Url">
                                    <span class="block max-w-[420px] truncate">@item.Url</span>
                                </a>
                            </td>

                            <td class="px-5 py-3">
                                <div class="flex items-center gap-3">
                                    <!-- icon preview (FontAwesome class) -->
                                    <div class="h-9 w-9 rounded-lg bg-slate-800 border border-slate-700 flex items-center justify-center">
                                        <i class="@item.Icon text-slate-200"></i>
                                    </div>
                                    <span class="text-slate-300 text-xs break-all">@item.Icon</span>
                                </div>
                            </td>

                            <td class="px-5 py-3">
                                @if (item.Status)
                                {
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-bold bg-emerald-500/15 text-emerald-300 border border-emerald-500/20">
                                        Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-bold bg-slate-500/15 text-slate-300 border border-slate-500/20">
                                        Pasif
                                    </span>
                                }
                            </td>

                            <td class="px-5 py-3">
                                <div class="flex justify-end gap-2">
                                    <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId"
                                       class="px-3 py-1.5 rounded-lg text-xs font-semibold bg-yellow-500/15 text-yellow-300 border border-yellow-500/20 hover:brightness-110 transition">
                                        Güncelle
                                    </a>

                                    <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId"
                                       class="px-3 py-1.5 rounded-lg text-xs font-semibold bg-red-500/15 text-red-300 border border-red-500/20 hover:brightness-110 transition"
                                       onclick="return confirm('Silmek istediğine emin misin?');">
                                        Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="px-5 py-10 text-center text-slate-400">
                                Henüz sosyal medya hesabı eklenmemiş.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
