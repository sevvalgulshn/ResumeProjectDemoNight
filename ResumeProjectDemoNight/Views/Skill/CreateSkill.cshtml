@model ResumeProjectDemoNight.Entities.Skill

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Yetenek Ekle";
}

<div class="max-w-4xl mx-auto p-6 space-y-6">

    <!-- Header -->
    <div class="flex items-start justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-white">Yeni Yetenek</h1>
            <p class="text-slate-400 text-sm">Skill bilgisini ekle</p>
        </div>

        <a href="/Skill/SkillList"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800/60 border border-slate-700 text-slate-200 text-sm font-semibold hover:bg-slate-800 transition">
            <span class="material-symbols-outlined">arrow_back</span>
            Listeye Dön
        </a>
    </div>

    <!-- Card -->
    <div class="bg-slate-900/40 border border-slate-800 rounded-xl overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-800 flex items-center gap-2">
            <span class="material-symbols-outlined">add_circle</span>
            <h2 class="text-white font-semibold">Form</h2>
        </div>

        <form method="post" class="p-6 space-y-5">

            <!-- Title -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Başlık</label>
                <input asp-for="Title"
                       class="w-full px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50"
                       placeholder="Örn: ASP.NET Core, Python, SQL..." />
                <span class="text-xs text-slate-500">Listede görünecek yetenek adı.</span>
            </div>

            <!-- Value -->
            <div class="space-y-2">
                <label class="text-sm font-semibold text-slate-200">Değer (0-100)</label>

                <div class="flex items-center gap-3">
                    <div class="h-11 w-11 rounded-lg bg-slate-800 border border-slate-700 flex items-center justify-center">
                        <span class="material-symbols-outlined">percent</span>
                    </div>

                    <input asp-for="Value" type="number" min="0" max="100"
                           class="flex-1 px-4 py-3 rounded-lg bg-slate-900/60 border border-slate-700 text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-primary/50"
                           placeholder="Örn: 90" />
                </div>

                <div class="text-xs text-slate-500">
                    İpucu: 0-100 aralığında gir.
                </div>
            </div>

            <!-- Status -->
            <div class="flex items-center justify-between p-4 rounded-lg bg-slate-900/60 border border-slate-800">
                <div>
                    <p class="text-sm font-semibold text-white">Durum</p>
                    <p class="text-xs text-slate-500">Aktif ise sitede görünür.</p>
                </div>

                <label class="inline-flex items-center cursor-pointer">
                    <input asp-for="Status" type="checkbox" class="sr-only peer" />
                    <div class="relative w-11 h-6 bg-slate-700 rounded-full peer peer-checked:bg-primary transition">
                        <div class="absolute top-0.5 left-0.5 h-5 w-5 bg-white rounded-full transition peer-checked:translate-x-5"></div>
                    </div>
                    <span class="ml-3 text-sm font-semibold text-slate-200">Aktif</span>
                </label>
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-end gap-2 pt-2">
                <a href="/Skill/SkillList"
                   class="px-4 py-2 rounded-lg text-sm font-semibold bg-slate-800/60 border border-slate-700 text-slate-200 hover:bg-slate-800 transition">
                    İptal
                </a>

                <button type="submit"
                        class="px-4 py-2 rounded-lg text-sm font-semibold bg-primary/20 border border-primary/30 text-primary hover:brightness-110 transition">
                    Kaydet
                </button>
            </div>

        </form>
    </div>
</div>
